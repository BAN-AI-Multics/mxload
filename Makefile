############################################################################
MAKE ?= make
############################################################################
SUBS  = src doc
############################################################################
.PHONY: \
	all
all: \
	$(SUBS)
	$(MAKE) -C src $@
	-$(MAKE) -C doc $@
############################################################################
.PHONY: \
	clean
clean: \
	$(SUBS)
	-$(MAKE) -C src $@
	-$(MAKE) -C doc $@
############################################################################
